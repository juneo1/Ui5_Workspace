<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="sapui5.App" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
			<Label text="First Name" class="sapUiSmallMargin" />
			<Input change=".firstChange" value="{/firstName}" valueLiveUpdate="true" enabled="{/enable}" />
			<Label text="Last Name" class="sapUiSmallMargin" />
			<Input value="{/lastName}" valueLiveUpdate="true" enabled="{/enable}" />
			<CheckBox selected="{/enable}" text="Enabled" />
		</content>
	</Page>
</core:View>